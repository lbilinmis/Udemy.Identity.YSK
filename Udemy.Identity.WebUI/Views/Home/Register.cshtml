@model UserCreateModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" data-sidebar-color="dark" data-topbar-color="light" data-sidebar-view="default">

<head>
    <meta charset="utf-8">
    <title>Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="" name="author">

    <!-- App favicon -->
    <link rel="shortcut icon" href="/adminpanel/assets/images/favicon.ico">

    <!-- App css -->
    <link href="/adminpanel/assets/css/theme.min.css" rel="stylesheet" type="text/css">
    <link href="/adminpanel/assets/css/icons.min.css" rel="stylesheet" type="text/css">

    <!-- Head Js -->
    <script src="/adminpanel/assets/js/head.js"></script>
</head>

<body class="bg-primary h-screen w-screen flex justify-center items-center">

    <div class="2xl:w-1/4 lg:w-1/3 md:w-1/2 w-full">
        <form asp-action="Register" asp-controller="Home" method="post">
            <div class="card overflow-hidden sm:rounded-md rounded-none">
                <div class="px-6 py-8">

                    <a href="index.html" class="flex justify-center mb-8">
                        <img class="h-6" src="/adminpanel/assets/images/logo-dark.png" alt="">
                    </a>


                    <div class="mb-4">
                        <label class="mb-2" for="LoggingName">Name</label>
                        <span class="text-danger" asp-validation-for="UserName"></span>

                        <input asp-for="UserName" class="form-input" type="text" placeholder="">
                    </div>


                    <div class="mb-4">
                        <label class="mb-2" asp-for="EMail">EMail</label>
                        <span class="text-danger" asp-validation-for="EMail"></span>

                        <input asp-for="EMail" class="form-input" type="email" placeholder="Enter your email">
                    </div>

                    <div class="mb-4">
                        <label class="mb-2" asp-for="Password">Password</label>
                        <span class="text-danger" asp-validation-for="Password"></span>

                        <input asp-for="Password" class="form-input" type="password" placeholder="Enter your password">
                    </div>

                    <div class="mb-4">
                        <label class="mb-2" asp-for="ConfirmPassword">ConfirmPassword</label>
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

                        <input asp-for="ConfirmPassword" class="form-input" type="password" placeholder="Enter your password">
                    </div>

                    @*    <div class="flex items-center mb-4">
                    <input type="checkbox" class="form-checkbox rounded" id="checkbox-signin">
                    <label class="ms-2" for="checkbox-signin">I accept <a href="#" class="text-primary">Terms and Conditions</a></label>
                    </div> *@

                    <div class="flex justify-center mb-3">
                        <button type="submit" class="btn w-full text-white bg-primary"> Kayıt Ol </button>
                    </div>

                    <div class="text-danger" asp-validation-summary="ModelOnly">

                    </div>
                </div>
            </div>

            <p class="text-white text-center mt-8">Already have an account ?<a href="auth-login.html" class="font-medium ms-1">Sign In</a></p>
        </form>
    </div>
</body>

</html>